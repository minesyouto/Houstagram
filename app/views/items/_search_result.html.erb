<% if @items.present? %>
  <% @items.each do |item| %>
      <p><%= item.name %></p>
      <p><%= item.price %></p>
      <%= link_to image_tag(item.image, size: "200x200"), "item.url" %>
      <%= button_to 'ユーザー登録', item_path(id:item.id), method: :post ,class: "btn btn-info" , remote: true %>
  <% end %>
 <% end %>