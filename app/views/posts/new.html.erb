<div class="container-fluid d-flex">
  <div class="container col-md-6">
    <div class="container pt-3">
        <div class="menu d-flex">
          <h3>
            <span class="badge mr-3" style="background-color:#2A3D45; color:#ffffff;">新規投稿</span>
          </h3>
        </div>
        
      <form>
        <%= form_with model: @post, local: true do |f| %>
        <div class="form-group col-10">
          <label for="formGroupExampleInput">タイトル</label>
          <%= f.text_field :title ,class:"form-control"%>
        </div>
        <div class="form-group col-10">
          <label for="formGroupExampleInput2">本文</label>
          <%= f.text_area :content,class:"form-control" %>
        </div>
        <div class="form-group col-10">
          <label for="formGroupExampleInput2">画像</label>
          <%= f.attachment_field :post_images_post_images, multiple: true ,class:"form-control", style:"background-color:#E1DABD; color:#ffffff;"%>
        </div>
        <div class="form-group col-10">
          <label for="formGroupExampleInput2">タグ</label>
          <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control" %>
        </div>
        <div class="form-group col-10">
          <%= f.submit "投稿" ,class:"btn", style:"background-color:#2A3D45; color:#ffffff;" %>
        </div>
        <% end %>
      </form>
    </div>
  </div>
  
  <div class="item col-md-6 pt-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3">
      商品を登録する
    </button>
    <div id="item" class="col-md-6 pt-3">
        <% if @item.present? %>
          <% render 'posts/item' %>
        <% else %>
        <% end %>
    </div>
  </div>
  
  
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModal3Label" style="color:#2A3D45">商品検索</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: items_search_path, method: "get" do |f| %>
          <%= f.text_field :keyword %>
          <%= f.submit "検索" ,style:"color:#2A3D45"%>
        <% end %>
        <div id="search_result" class="justify-content-center">
          <% render "/items/search_result" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal" style="background-color:#2A3D45; color:#ffffff;">Close</button>
      </div>
    </div>
  </div>
</div>



